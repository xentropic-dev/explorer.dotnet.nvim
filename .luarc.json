{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "diagnostics.globals": [
    "vim",
    "assert",
    "before_each",
    "after_each",
    "describe",
    "it"
  ],
  "runtime": {
    "version": "LuaJIT"
  },
  "runtime.path": ["lua/?.lua", "lua/?/init.lua"],
  "workspace": {
    "library": [
      "lua/",
      "${3rd}/busted/library",
      "${3rd}/luassert/library",
      "${3rd}/luv/library"
    ],
    "checkThirdParty": false
  }
}
